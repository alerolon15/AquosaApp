{{> header}}
<link href="/vendor/bootstrap/css/bootstrap.css" rel="stylesheet">

<div class="container" style="margin-top:50px;">
      <div class="row">
        <div class="col-xs-12">
        </div>
      </div>
      <div class="row">
        <div class="col-lg-3">
          <img src="\public\images\logos\logo.png" class="img-responsive" alt="">
          <hr>
          <div class="list-group">
            <a href="/index" class="list-group-item">Todos los productos</a>
            {{#each categorias}}
              <a href="/index/{{this}}" class="list-group-item">{{ this }}</a>
            {{/each}}
          </div>
        </div>
        <!-- /.col-lg-3 -->
        <div class="col-lg-9">
          <div class="row">
            <div id="carouselExampleIndicators" class="carousel slide my-4-b" data-ride="carousel">
              <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
              </ol>
              <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                  <img class="d-block img-fluid" src="\public\images\slides\Slide 1.png" alt="First slide">
                </div>
                <div class="carousel-item">
                  <img class="d-block img-fluid" src="\public\images\slides\Slide 2.png" alt="Second slide">
                </div>
                <div class="carousel-item">
                  <img class="d-block img-fluid" src="\public\images\slides\Slide 3.png" alt="Third slide">
                </div>
                <div class="carousel-item">
                  <img class="d-block img-fluid" src="\public\images\slides\Slide 4.png" alt="Third slide">
                </div>
                <div class="carousel-item">
                  <img class="d-block img-fluid" src="\public\images\slides\Slide 5.png" alt="Third slide">
                </div>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Anterior</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Siguiente</span>
              </a>
            </div>
            {{#if productos}}
              {{#each productos}}
              <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                  <img style="margin: 0 auto; min-width:90%; width:90%" class="img-responsive" src="/public/images/productos/{{ this.imagenes.[0] }}">
                  <hr>
                  <div class="info">
                    <div class="row">
                        <div class="price col-md-12">
                            <h5>{{ this.titulo }}</h5>
                            <p>{{ this.cantidad }} ml.-</p>
                            <h5 class="price-text-color">${{ this.precio }}.-</h5>
                        </div>
                    </div>
                    <div class="clearfix">
                    </div>
                  </div>
                  <div class="card-footer">
                    <div class="col-md-6">
                      <a class="btn btn-danger" style="color:#fff" onclick="cargarCarrito('{{ this._id }}')">Comprar</a>
                    </div>
                    <div class="col-md-6">
                      <a class="btn btn-default" href="/infoProducto/{{ this._id }}">Ver Info</a>
                    </div>
                  </div>
                </div>
              </div>
              {{/each}}
            {{else}}
              <p>No hay ningun producto disponible</p>
            {{/if}}
          </div>
          <!-- /.row -->
        </div>
        <!-- /.col-lg-9 -->
      </div>
      <!-- /.row -->


    </div>
    <!-- /.container -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

{{> footer}}

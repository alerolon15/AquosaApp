    <script type="text/javascript">
      function cargarCarrito(id) {
        console.log(id);
        var direccion = "/agregarCarrito/" + id
        $.ajax(
          {
            url: direccion,
            type: 'GET',
            result: JSON.stringify(id),
            success: function(result){
              if(result) {
                $('#modalito').click();

                document.getElementsByClassName('badge')[0].innerText = result.totalQty;
              };
            }
        });
      };
    </script>
    <script type="text/javascript">
      function infoPedido(id) {
        var direccion = "/infoPedido/" + id
        $.ajax(
          {
            url: direccion,
            type: 'GET',
            result: JSON.stringify(id),
            success: function(result){
              if(result) {
                $('#modalitoP').click();
                console.log(result);
                //document.getElementsByClassName('Nombre')[0].innerText = JSON.stringify(result.nombre);
                document.getElementsByClassName('pedidoJson')[0].innerText = result.pedido._id;
                document.getElementsByClassName('usuarioJson')[0].innerText = result.usuario.nombre;
              };
            }
        });
      };
    </script>

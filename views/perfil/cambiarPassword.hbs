{{> header}}
<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">

<div class="container grayBackground">
  <h1>Cambiar Contraseña<h1>
    <div class="omb_login">
		<div class="row omb_row-sm-offset-3 omb_loginOr">
			<div class="col-xs-12 col-sm-6">
				<hr class="omb_hrOr">
			</div>
		</div>
		<div class="row omb_row-sm-offset-3">
			<div class="col-xs-12 col-sm-6">
			    <form class="omb_loginForm" action="/cambiarPassword" autocomplete="off" method="POST" id="registration-form">
          <div class="input-group">
						<span class="input-group-addon"><i class="fa fa-lock"></i></span>
						<input  type="password" class="form-control" name="password" placeholder="Contraseña anterior">
					</div>
          <span class="help-block"></span>
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-lock"></i></span>
						<input  type="password" class="form-control" name="nuevapassword" placeholder="Contraseña nueva">
					</div>
          <span class="help-block"></span>
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-lock"></i></span>
						<input  type="password" class="form-control" name="nuevapassword_confirmation" placeholder="Confirmar Contraseña nueva">
					</div>
          <hr>
          {{{error}}}
          {{#if errores}}
            {{#each errores}}
              <div class='alert alert-danger' role='alert'>{{this}}</div>
            {{/each}}
          {{/if}}
					<button class="btn btn-lg btn-primary btn-block" type="submit">Cambiar Contraseña</button>
				</form>
        <hr>
        <a href="/index">Volver al inicio</a>
			</div>
    </div>
	</div>
</div>
